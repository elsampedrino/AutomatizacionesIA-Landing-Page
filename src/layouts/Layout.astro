---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "El asistente inmobiliario con IA que atiende y vende por vos, 24/7. Respondé consultas, mostrá propiedades y capturá leads sin esfuerzo." } = Astro.props;

const siteUrl = 'https://www.automatizacionia.com.ar';
const ogImage = `${siteUrl}/Logo_AutomatizacionesIA.png`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "AutomatizacionIA",
  "description": description,
  "url": siteUrl,
  "logo": ogImage,
  "image": ogImage,
  "email": "automatizacion.bot.ia@gmail.com",
  "makesOffer": {
    "@type": "Offer",
    "itemOffered": {
      "@type": "SoftwareApplication",
      "name": "InmoBot",
      "applicationCategory": "BusinessApplication",
      "operatingSystem": "Web",
      "description": "Asistente virtual con IA para inmobiliarias que responde consultas, filtra propiedades y captura leads las 24 horas"
    }
  }
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/jpeg" href="/inmobot-logo.jpg" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:locale" content="es_AR" />
    <meta property="og:site_name" content="AutomatizacionIA" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

    <title>{title}</title>
  </head>
  <body class="font-sans antialiased bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  html {
    font-size: 13px;
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
</style>
