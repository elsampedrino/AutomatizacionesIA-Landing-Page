---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Demo from '../components/Demo.astro';
import Benefits from '../components/Benefits.astro';
import Pricing from '../components/Pricing.astro';
import TechDifferentiators from '../components/TechDifferentiators.astro';
import FutureVision from '../components/FutureVision.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="InmoBot - Asistente Inmobiliario con IA | Automatizaciones IA"
  description="El asistente inmobiliario con IA que atiende y vende por vos, 24/7. Respondé consultas, mostrá propiedades y capturá leads sin esfuerzo."
>
  <!-- Header Navigation -->
  <Header />

  <!-- Hero Section -->
  <Hero />

  <!-- Contenedor Cómo funciona -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <div class="bg-white rounded-3xl shadow-xl border border-gray-200 overflow-hidden">
      <HowItWorks />
    </div>
  </div>

  <!-- Contenedor Beneficios -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 mb-8">
    <div class="bg-white rounded-3xl shadow-xl border border-gray-200 overflow-hidden">
      <Benefits />
    </div>
  </div>

  <!-- Demo en vivo -->
  <Demo />

  <!-- Planes y Precios -->
  <Pricing />

  <!-- Diferenciadores Tecnológicos -->
  <TechDifferentiators />

  <!-- Visión Futura -->
  <FutureVision />

  <!-- Contacto -->
  <Contact />

  <!-- Footer -->
  <Footer />
</Layout>

