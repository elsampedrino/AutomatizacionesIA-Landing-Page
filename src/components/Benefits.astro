---

<section id="beneficios" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Título de sección -->
    <div class="section-header mb-16">
      <div class="flex items-start gap-4">
        <div class="vertical-line"></div>
        <div>
          <h2 class="text-4xl sm:text-5xl font-bold mb-2 bg-gradient-to-r from-violet-600 to-cyan-500 bg-clip-text text-transparent">
            Beneficios para tu Inmobiliaria
          </h2>
          <p class="text-lg text-gray-600">
            Automatizá la atención y enfocate en lo que realmente importa: <span class="font-bold uppercase">Cerrar Ventas</span>
          </p>
        </div>
      </div>
    </div>

    <!-- Grid de beneficios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="group relative">
          <!-- Card con fondo cyan -->
          <div class="card-benefit h-full bg-gradient-to-br from-white to-cyan-100 rounded-2xl p-8 border border-cyan-200 hover:border-violet-300 hover:shadow-2xl active:shadow-2xl transition-all duration-300 relative overflow-hidden">
            <!-- Gradiente de fondo en hover -->
            <div class="absolute inset-0 bg-gradient-to-br from-violet-500 to-cyan-500 opacity-0 group-hover:opacity-5 transition-opacity duration-300"></div>

            <!-- Contenido -->
            <div class="relative z-10">
              <!-- Ícono -->
              <div class="w-16 h-16 bg-gray-900 rounded-2xl flex items-center justify-center mb-4 transform group-hover:scale-110 group-active:scale-110 transition-transform duration-300 text-white">
                <Fragment set:html={benefit.icon} />
              </div>

              <!-- Título -->
              <h3 class="text-2xl font-bold text-gray-900 mb-3">
                {benefit.title}
              </h3>

              <!-- Descripción -->
              <p class="text-gray-600 text-base leading-relaxed">
                {benefit.description}
              </p>

              <!-- Barra decorativa -->
              <div class="mt-6 h-1 w-16 bg-gradient-to-r from-violet-500 to-cyan-500 rounded-full group-hover:w-full transition-all duration-500"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  .card-benefit {
    font-family: 'Space Grotesk', sans-serif;
  }

  .vertical-line {
    width: 4px;
    min-height: 70px;
    background: linear-gradient(180deg, #8b5cf6 0%, #06b6d4 100%);
    border-radius: 2px;
    flex-shrink: 0;
  }
</style>
