---
// Header Navigation Component
const menuItems = [
  { label: 'Inicio', href: '#hero' },
  { label: 'Cómo Funciona', href: '#como-funciona' },
  { label: 'Beneficios', href: '#beneficios' },
  { label: 'Planes', href: '#precios' },
  { label: 'Bot+Landing', href: '#bot-landing' },
  { label: 'Tecnología', href: '#tecnologia' },
  { label: 'El Futuro', href: '#futuro' },
  { label: 'Preguntas Frecuentes', href: '#faq' },
];
---

<!-- Space Grotesk Font -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

<header class="header">
  <div class="header-container">
    <!-- Logo / Brand -->
    <a href="#hero" class="brand">
      <div class="brand-logo">
        <img src="https://inmobot-widget.vercel.app/inmobot-logo.jpg" alt="InmoBot" class="brand-img" />
      </div>
      <span class="brand-text">InmoBot</span>
    </a>

    <!-- Navigation Menu -->
    <nav class="nav-menu">
      <ul class="nav-list">
        {menuItems.map((item) => (
          <li class="nav-item">
            <a href={item.href} class="nav-link">
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- CTA Button -->
    <a href="#demo" class="cta-button">
      Probar el Asistente en Vivo
    </a>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" aria-label="Abrir menú">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="menu-icon">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu">
    <nav class="mobile-nav">
      <ul class="mobile-nav-list">
        {menuItems.map((item) => (
          <li class="mobile-nav-item">
            <a href={item.href} class="mobile-nav-link">
              {item.label}
            </a>
          </li>
        ))}
        <li class="mobile-nav-item">
          <a href="#demo" class="mobile-cta-button">
            Probar el Asistente en Vivo
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: #3C424F;
    font-family: 'Space Grotesk', sans-serif;
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Brand / Logo */
  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .brand-logo {
    width: 40px;
    height: 40px;
    background: white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 3px;
  }

  .brand-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 7px;
  }

  .brand-text {
    font-size: 1.4rem;
    font-weight: 700;
    background: linear-gradient(90deg, #a855f7 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Desktop Navigation */
  .nav-menu {
    display: none;
  }

  @media (min-width: 1024px) {
    .nav-menu {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.25rem;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 0.875rem;
    color: white;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    position: relative;
    transition: color 0.2s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0.875rem;
    right: 0.875rem;
    height: 2px;
    background: linear-gradient(90deg, #8151CF 0%, #a855f7 100%);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .nav-link:hover {
    color: #d8b4fe;
  }

  /* CTA Button with animated gradient */
  .cta-button {
    display: none;
    padding: 0.625rem 1.25rem;
    background: linear-gradient(90deg, #8151CF 0%, #a855f7 25%, #06b6d4 50%, #a855f7 75%, #8151CF 100%);
    background-size: 200% 100%;
    color: white;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    border-radius: 50px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(129, 81, 207, 0.3);
    white-space: nowrap;
    animation: gradientMove 3s ease-in-out infinite;
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (min-width: 1024px) {
    .cta-button {
      display: inline-block;
    }
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(129, 81, 207, 0.4);
    border-color: rgba(255, 255, 255, 0.6);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  @media (min-width: 1024px) {
    .mobile-menu-btn {
      display: none;
    }
  }

  .menu-icon {
    width: 28px;
    height: 28px;
    color: white;
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    background-color: #3C424F;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-menu.active {
    display: block;
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 1rem 1.5rem;
  }

  .mobile-nav-item {
    margin: 0;
  }

  .mobile-nav-link {
    display: block;
    padding: 0.875rem 0;
    color: white;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: color 0.2s ease;
  }

  .mobile-nav-link:hover {
    color: #d8b4fe;
  }

  .mobile-cta-button {
    display: block;
    margin-top: 1rem;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, #8151CF 0%, #a855f7 100%);
    color: white;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 50px;
    text-align: center;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link, .mobile-cta-button');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('active');
  });

  // Close mobile menu when clicking a link
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('active');
    });
  });

  // Close mobile menu on scroll
  window.addEventListener('scroll', () => {
    if (mobileMenu?.classList.contains('active')) {
      mobileMenu.classList.remove('active');
    }
  });
</script>
